@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Blaster - Home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* General styling */
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
        }

        h1, b {
            color: #0074D9;
        }

        /* Navbar styling */
        #navlist {
            background-color: #0074D9;
            position: fixed;
            top: 0;
            width: 88%;
            overflow: visible;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0px;
        }

            #navlist a {
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 18px;
            }

                #navlist a:hover {
                    background-color: #ddd;
                    color: black;
                }

                #navlist a.login {
                    background-color: #FF4136;
                    font-weight: bold;
                    padding: 12px 16px;
                    border-radius: 200px;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    transition: background-color 0.2s ease;
                }

                    #navlist a.login:hover {
                        background-color: #FF725C;
                    }

        .user-login {
            display: flex;
            align-items: center;
            color: #f2f2f2;
            font-size: 18px;
            margin-right: 200px;
            padding-left: 10px; /* Add some left padding */
        }

        /* Search bar styling */
        .search-wrapper {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .search {
            margin: 10px;
        }

            .search input[type=text] {
                width: 500px;
                height: 30px;
                border-radius: 70px;
                border: none;
                padding-left: 10px;
                font-size: 16px;
                color: #333;
                background-color: #fff;
                box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
            }

            .search button {
                background-color: #FF4136;
                color: white;
                padding: 5px 20px;
                margin-right: 10px;
                font-size: 16px;
                border: none;
                border-radius: 20px;
                cursor: pointer;
            }

        /* Content styling */
        .content {
            padding-top: 100px;
            padding-left: 20px;
            padding-right: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }


    .content b {
        font-size: 24px;
        font-weight: bold;
        color: #0074D9;
        display: block;
        margin-bottom: 20px;
    }

    .content p {
        line-height: 1.6;
        color: #333;
        font-size: 18px;
        margin-bottom: 20px;
    }

        /* Meet the developers section */
        .meet-developers {
            margin-top: 80px;
            text-align: center;
        }

            .meet-developers h2 {
                font-size: 32px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .meet-developers p {
                font-size: 18px;
                color: #333;
                margin-bottom: 20px;
            }

            .meet-developers img {
                width: 90%;
                border-radius: 50%;
            }


    /* Responsive design */
    @@media (max-width: 1080px) {
        #navlist {
            flex-wrap: wrap;
        }

        .search-wrapper {
            order: 1;
            width: 100%;
            padding: 10px 20px;
        }
    }

    @@media (max-width: 768px) {
        #navlist {
            flex-wrap: wrap;
        }

        .search-wrapper {
            order: 1;
            width: 100%;
            padding: 10px 20px;
        }

        .search input[type=text] {
            width: 100%;
        }

        #navlist a {
            font-size: 16px;
            padding: 12px 14px;
        }

        .content {
            padding-top: 80px;
            padding-left: 10px;
            padding-right: 10px;
        }

                .content h1 {
                    font-size: 36px;
                }

            .meet-developers h2 {
                font-size: 24px;
            }

            .meet-developers p {
                font-size: 16px;
            }

            .meet-developers img {
                width: 100%;
            }
        }

</style>
</head>
<body>
    <!-- Navbar -->
    <div id="navlist">
        <div>
            <a href="#">Home</a>
            <a href="#">Our Products</a>
            <a href="#">Careers</a>
            <a href="#">About Us</a>
            <a href="#">Contact Us</a>
        </div>
        <div class="user-login">
            <i class="fa fa-user-circle-o" style="font-size: 24px;"></i>
            <a href="#" class="login">Login</a>
            <form method="post" asp-controller="Account" asp-action="Login" class="login-form" style="display:none;">
                <div>
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required />
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <button type="submit">Login</button>
            </form>
        </div>
        <div class="search-wrapper">
            <div class="search">
                <form action="#">
                    <input type="text" placeholder="Search Events" name="search">
                    <button>
                        <i class="fa fa-search" style="font-size: 18px;"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>


<!-- Main content -->
<div class="content">
    <h1>What is Ticket Blaster?</h1>
    <b>A place for people to make plans</b>
    <p>
        Ticket Blaster is an online platform that connects event organizers and attendees. Our platform makes it easy for organizers to set up events, specify dates, times, venues, prices, and ticket amounts. Attendees can search for events, view details on ticket costs, seating, and availability, and purchase tickets that suit their interests.
    </p>
</div>

    <!-- Add this style block to the head section of your HTML document -->
    <style>
        .developer-image {
            width: 40000px;
            height: 110px;
            object-fit: contain;
        }
    </style>

    <!-- Meet the developers section -->
    <div class="meet-developers">
        <h2>Meet the developers</h2>
        <p>We are a team of experienced developers and designers who are passionate about building high-quality software products. Our mission is to provide our users with a seamless and enjoyable experience when using Ticket Blaster.</p>
        <div class="developers-grid" style="display: flex; justify-content: space-between;">
            <div class="developer" style="display: inline-block;">
                <img class="developer-image" src="~/Images/IMG_3941.jpg" alt="Developer image">
                <h3>Brady Bauck</h3>
                <p>Lead Developer</p>
            </div>
            <div class="developer" style="display: inline-block;">
                <img class="developer-image" src="~/Images/Nick.PNG" alt="Developer image">
                <h3>Nick Smith</h3>
                <p>Frontend Developer</p>
            </div>
            <div class="developer" style="display: inline-block;">
                <img class="developer-image" src="~/Images/Tylr.PNG" alt="Developer image">
                <h3>Tyler Thompson</h3>
                <p>Backend Developer</p>
            </div>
            <div class="developer" style="display: inline-block;">
                <img class="developer-image" src="~/Images/Eli.PNG" alt="Developer image">
                <h3>Elijah Green</h3>
                <p>UI Designer</p>
            </div>
        </div>
    </div>




<!-- Login form script -->
<script>
    const loginLink = document.querySelector(".login");
    const loginForm = document.querySelector(".login-form");

    loginLink.addEventListener("click", function(event) {
        event.preventDefault();

        loginForm.style.display = loginForm.style.display === "none" ? "block" : "none";
    });
</script>
</body>
</html>