<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ticket Blaster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Ticket_Blaster.styles.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="styles.css">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
        }

        .navbar {
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
        }

        .nav-link {
            font-weight: 500;
            font-size: 1rem;
            margin-left: 1rem;
            margin-right: 1rem;
        }

        .form-inline .form-control {
            margin-left: 1rem;
        }

        .dark-mode-switch {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            margin-bottom: 5px;
            padding-right: 0.5rem;
        }

        .nav-link.dark-mode-switch {
            display: inline-flex;
            align-items: center;
        }

        .nav-link.dark-mode-switch span {
            margin-left: 5px; /* Add space between the label and the toggle switch */
        }

        .slider {
            margin-left: 0.5rem;
            margin-right: 0.5rem;
        }

        .fa-facebook {
            font-size: 24px;
            margin-left: 8px;
            color: #3b5998;
        }

            .fa-facebook:hover {
                color: #2e4372;
            }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Ticket Blaster</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Events">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CreateEvent">Create Event</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/PurchaseTickets">Purchase Tickets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CreateAccount">Create Account</a>
                        </li>
                        <!-- Add dark mode toggle switch here -->
                        <li class="nav-item">
                            <label class="nav-link dark-mode-switch">
                                Dark Mode
                                <input type="checkbox" id="dark-mode-toggle">
                                <span class="slider round"></span>
                            </label>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search Events" aria-label="Search">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <a class="nav-link ml-3" asp-area="" asp-page="/Login">Sign In</a>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Ticket Blaster - <a asp-area="" asp-page="/Index">Home</a>|
            <span class="float-right">
                <a asp-area="" asp-page="/AboutUs">About Us</a>|
                <a href="https://www.facebook.com/profile.php?id=100091862906924" target="_blank" class="fa fa-facebook"></a>|
                <a asp-area="" asp-page="/Reviews">Reviews</a>

            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
<script>
    // Load dark mode setting from localStorage.
    const darkModeToggle = document.getElementById('dark-mode-toggle');
    const savedDarkMode = localStorage.getItem('dark-mode');
    
    if (savedDarkMode === 'true') {
        document.body.classList.add('dark-mode');
        darkModeToggle.checked = true;
    }

    // Listen for changes and save the setting to localStorage.
    darkModeToggle.addEventListener('change', function () {
        document.body.classList.toggle('dark-mode');
        localStorage.setItem('dark-mode', darkModeToggle.checked);
    });
</script>

</body>
</html>